
SHELL := bash
.ONESHELL:
.SHELLFLAGS := -eu -o pipefail -c
.DELETE_ON_ERROR:
MAKEFLAGS += --warn-undefined-variables
MAKEFLAGS += --no-builtin-rules
MAKEFLAGS += --output-sync=target
# n_prc := $(shell sysctl -n hw.logicalcpu)
# MAKEFLAGS := --jobs=$(n_prc)
timeout := 10
cmd_bats := BATS_TEST_TIMEOUT=$(timeout) bats --tap

ifeq ($(origin .RECIPEPREFIX), undefined)
				$(error This Make does not support .RECIPEPREFIX. Please use GNU Make 4.0 or later)
endif
.RECIPEPREFIX = >

.PHONY: build local_deploy

build: dist/main.js dist/chrest.zip;

local_deploy: build
>npx web-ext run -s dist/

dist/manifest.json: manifest.json
>mkdir -p $(dir $@)
>cp $< $@

dist/chrest_icon_128.png: chrest_icon_128.png
>mkdir -p $(dir $@)
>cp $< $@

files_js := $(shell find src -iname '*.js')

dist/main.js: $(files_js) dist/manifest.json dist/chrest_icon_128.png
>mkdir -p $(dir $@)
>npx rollup --config
>npx web-ext lint -s dist/

dist/chrest.zip: dist/main.js
>zip -r "$@" dist/* -x "$@"

